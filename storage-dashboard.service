[Unit]
Description=Storage Dashboard Web Application
After=network.target

[Service]
Type=notify
User=dashboard
Group=dashboard
WorkingDirectory=/opt/storage-dashboard
Environment="PATH=/opt/storage-dashboard/venv/bin"
ExecStart=/opt/storage-dashboard/venv/bin/gunicorn -w 4 -b 0.0.0.0:5000 --access-logfile - --error-logfile - run:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
