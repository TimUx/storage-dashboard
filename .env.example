SECRET_KEY=your-secret-key-here

# Database configuration
# For PostgreSQL (recommended for production with concurrent access):
# DATABASE_URL=postgresql://username:password@localhost:5432/storage_dashboard
# For SQLite (not recommended for production with multiple workers):
DATABASE_URL=sqlite:///storage_dashboard.db

# PostgreSQL credentials (only needed when using PostgreSQL)
POSTGRES_DB=storage_dashboard
POSTGRES_USER=dashboard
POSTGRES_PASSWORD=your-postgres-password-here

FLASK_ENV=development
SSL_VERIFY=false
TZ=Europe/Berlin
